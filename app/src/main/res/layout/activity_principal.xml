<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="75dp"
    tools:context="com.app.andre.reposteriayoli.Principal">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        card_view:cardCornerRadius="6dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">>

        <ImageView
            android:id="@+id/imgClientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clientes"
            card_view:srcCompat="@drawable/ic_clientes" />

        <TextView
            android:id="@+id/tvClientes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Clientes" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:paddingTop="800dp"
        card_view:cardCornerRadius="6dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/imgAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Admin"
            card_view:srcCompat="@drawable/ic_administracion" />

        <TextView
            android:id="@+id/tvAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btAdmin" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
